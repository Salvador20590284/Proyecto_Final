<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.enrutame.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.example.enrutame.ui.gallery.GalleryFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.example.enrutame.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />
    <activity
        android:id="@+id/escaner"
        android:name="com.example.enrutame.Escaner"
        android:label="activity_escaner"
        tools:layout="@layout/activity_escaner" />
    <activity
        android:id="@+id/imagen"
        android:name="com.example.enrutame.Imagen"
        android:label="activity_imagen"
        tools:layout="@layout/activity_imagen" />
    <activity
        android:id="@+id/generadorQR"
        android:name="com.example.enrutame.GeneradorQR"
        android:label="activity_generador_qr"
        tools:layout="@layout/activity_generador_qr" />
